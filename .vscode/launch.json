{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "/Users/brian/Src/route-forecast/dist/server/index.js",
            "localRoot": "/Users/brian/Src/route-forecast/src/jsx/server",
            "remoteRoot": "${workspaceFolder}/dist/server",
            "runtimeArgs": ["--preserve-symlinks"],
            "sourceMaps": true,
            "trace": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },        
        {
            "type": "chrome",
            "name": "Launch client",
            "request": "launch",
            "url": "http://localhost:8080",
            "trace":true,
            "outFiles": [
                "${workspaceFolder}/dist/static/*"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "/usr/local/bin/npm",
            "args": [
                "run",
                "test",
                "--",
                "--runInBand",
                "--watchAll=false"
            ]
        }
    ]
}
